#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('exphellp:server');
var https = require('https');
var http = require('http');
var fs = require('fs'); 
const path = require("path");
const cookie = require('cookie');
const cookieParser = require('cookie-parser');
const authController = require('../controllers/authController');
const globalConfig = require('../config_api.js')


//process.env.NODE_TLS_REJECT_UNAUTHORIZED = "0" // Avoids DEPTH_ZERO_SELF_SIGNED_CERT error for self-signed certs

var options = { 
  key: fs.readFileSync(path.resolve(__dirname,'server-key.pem')), 
  cert: fs.readFileSync(path.resolve(__dirname,'server-crt.pem')), 
  ca: fs.readFileSync(path.resolve(__dirname,'ca-crt.pem')), 
  requestCert: true,
  rejectUnauthorized: false
}; 

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = https.createServer(options, app);
// var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);


// Loading the index file . html displayed to the client
var io = require('socket.io').listen(server);

// When a client connects, we note it in the console
io.sockets.on('connection', async (socket) => {

  console.log('A client is connected!');
    
  // let validClient = false;
  // try {
